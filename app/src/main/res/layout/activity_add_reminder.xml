<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/ly_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/themecolor"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/add_personal_reminder"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:gravity="center"
                    android:orientation="vertical"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_vertical"
                    android:text="@string/date"

                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_when_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_regular"
                    android:singleLine="true"
                    android:textSize="@dimen/_14ssp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true" />



            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/white"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_vertical"
                    android:text="@string/time"

                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_when_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_regular"
                    android:singleLine="true"
                    android:textSize="@dimen/_14ssp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true" />



            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/player_image"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/calender_icon"
                android:layout_marginLeft="@dimen/_10sdp" />

            <RelativeLayout
                android:id="@+id/user_detail_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/player_image"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/player_image"
                android:layout_marginStart="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/muli_black"
                    android:gravity="center_vertical"
                    android:text="@string/reminder_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginRight="@dimen/_5sdp" />

                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:background="@null"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_reminder_title"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textStyle="normal"
                    tools:ignore="Autofill"
                    android:layout_marginRight="@dimen/_5sdp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/user_detail_relative"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/gray_color"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/tv_reminder_image"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/notification_icon" />

            <RelativeLayout
                android:id="@+id/tv_reminder_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_reminder_image"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_reminder_image"
                android:layout_marginStart="@dimen/_5sdp">
                <TextView
                    android:id="@+id/tv_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/muli_black"
                    android:gravity="center_vertical"
                    android:text="@string/txt_reminder"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_11ssp"
                    android:layout_marginRight="@dimen/_5sdp" />


                <TextView
                    android:id="@+id/tv_reminder_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_reminder"
                    android:background="@null"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="normal"
                    android:textColor="@color/black"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tv_reminder_relative"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/gray_color"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/tv_repeat_image"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/repeat_icon" />

            <RelativeLayout
                android:id="@+id/tv_repeat_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_repeat_image"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_repeat_image"
                android:layout_marginStart="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/muli_black"
                    android:gravity="center_vertical"
                    android:text="@string/txt_repeat"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginRight="@dimen/_5sdp" />

                <TextView
                    android:id="@+id/tv_repeat_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_repeat"
                    android:background="@null"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="normal"
                    android:textColor="@color/themecolor"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tv_repeat_relative"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/gray_color"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/tv_snooze_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/tv_snooze_image"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/snooze"
                android:layout_marginStart="@dimen/_10sdp" />

            <RelativeLayout
                android:id="@+id/tv_snooze_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_snooze_image"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_snooze_image"
                android:layout_marginStart="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_snooze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/muli_black"
                    android:gravity="center_vertical"
                    android:text="@string/txt_snooze"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginRight="@dimen/_5sdp" />

                <TextView
                    android:id="@+id/tv_snooze_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_snooze"
                    android:background="@null"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="normal"
                    android:layout_toStartOf="@+id/Snooze_on"
                    android:textColor="@color/themecolor"
                    android:layout_toLeftOf="@+id/Snooze_on" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/Snooze_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/_10sdp" />



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tv_snooze_relative"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/gray_color"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_submit_reminder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/themecolor"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_send_ack"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/muli_black"
            android:gravity="center"
            android:text="@string/add_remind"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/lyBack_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:src="@drawable/close"
        app:backgroundTint="@color/orange_color"
        app:tint="@android:color/white"
        app:elevation="@dimen/_5sdp"
        app:fabSize="normal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp" />

</RelativeLayout>