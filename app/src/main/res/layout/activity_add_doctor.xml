<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/muli_extrabold"
                android:gravity="center"
                android:text="@string/add_doctor"
                android:textColor="@color/blackish"
                android:textSize="@dimen/_16sdp" />

            <RelativeLayout
                android:id="@+id/back_btn"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/back_arrow" />

            </RelativeLayout>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:text="@string/doctor_name"
                    android:textColor="@color/blackish"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/popup_relative">

                    <EditText
                        android:id="@+id/txt_doctor_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@color/transparent"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:hint="@string/enter_doctor_name"
                        android:textColor="@color/themecolor"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:text="@string/doctor_address"
                    android:textColor="@color/blackish"
                    android:textSize="@dimen/_12sdp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/popup_relative">

                    <EditText
                        android:id="@+id/txt_doctor_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@color/transparent"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:hint="@string/address"
                        android:textColor="@color/themecolor"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:text="@string/mobile_number"
                    android:textColor="@color/blackish"
                    android:textSize="@dimen/_12sdp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp">

                        <LinearLayout
                            android:id="@+id/countryLL"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:background="@drawable/popup_relative">

                            <TextView
                                android:id="@+id/countryCodeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_10ssp"
                                android:layout_marginLeft="@dimen/_10ssp"
                                android:gravity="center"
                                android:text="+1"
                                android:fontFamily="@font/muli_bold"
                                android:layout_gravity="center"
                                android:textColor="@color/themecolor"
                                android:textColorHint="@color/themecolor"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/down_arrow"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp" />

                        </LinearLayout>



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/countryLL"
                            android:layout_toRightOf="@+id/countryLL"
                            android:background="@drawable/popup_relative"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <EditText
                                android:id="@+id/txt_mobile_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@color/transparent"
                                android:fontFamily="@font/muli_bold"
                                android:gravity="center|start"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:maxLength="10"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:hint="@string/enter_mobile_number"
                                android:textColor="@color/themecolor"
                                android:textSize="@dimen/_12sdp" />


                        </RelativeLayout>



                    </RelativeLayout>


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:text="@string/email"
                    android:textColor="@color/blackish"
                    android:textSize="@dimen/_12sdp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/popup_relative">

                    <EditText
                        android:id="@+id/txt_doctor_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@color/transparent"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center|start"
                        android:hint="@string/hint_email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/themecolor"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:text="@string/Fax"
                    android:textColor="@color/blackish"
                    android:textSize="@dimen/_12sdp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/popup_relative">

                    <EditText
                        android:id="@+id/txt_fax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@color/transparent"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center|start"
                        android:hint="@string/enter_Fax"
                        android:imeOptions="actionNext"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/themecolor"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:text="@string/Portal"
                    android:textColor="@color/blackish"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/popup_relative">

                    <EditText
                        android:id="@+id/txt_Portal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@color/transparent"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center|start"
                        android:hint="@string/enter_Portal"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:inputType="textWebEditText"
                        android:textColor="@color/themecolor"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/btn_add_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/orange_round_bg"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

            </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>





</RelativeLayout>