<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_8sdp"
    android:paddingBottom="@dimen/_8sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserImage"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/user_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:fontFamily="@font/muli_bold"
        android:text="Add Attachments"
        android:textColor="@color/themecolor"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserImage"
        app:layout_constraintStart_toEndOf="@+id/ivUserImage"
        app:layout_constraintTop_toTopOf="@+id/ivUserImage" />

    <LinearLayout
        android:id="@+id/llCommentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/tvUserName"
        app:layout_constraintStart_toEndOf="@+id/tvUserName"
        app:layout_constraintTop_toTopOf="@+id/tvUserName">

        <ImageView
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/typing_indicator_dot"
            app:tint="@color/themecolor" />

        <TextView
            android:id="@+id/tvDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_semibold"
            android:paddingStart="@dimen/_4sdp"
            android:text="2 Days ago"
            android:textColor="#A6A6A6"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@+id/ivUserImage"
            app:layout_constraintTop_toBottomOf="@+id/ivUserImage" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivUserImage"
        app:layout_constraintTop_toBottomOf="@+id/ivUserImage">

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_semibold_italic"
            android:paddingStart="@dimen/_4sdp"
            android:text="Add Attachments"
            android:textColor="#272727"
            android:textSize="@dimen/_10ssp" />

        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_border"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Add Comment"
            android:paddingStart="@dimen/_4sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:textColorHint="#A3A2A2"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ivUserImage"
            app:layout_constraintTop_toBottomOf="@+id/ivUserImage" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/llComment"
        app:layout_constraintTop_toBottomOf="@+id/llComment">

        <TextView
            android:id="@+id/tvSaveComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_semibold"
            android:paddingEnd="@dimen/_10sdp"
            android:text="Update"
            android:textColor="#272727"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/ivUserImage"
            app:layout_constraintTop_toBottomOf="@+id/ivUserImage" />

        <TextView
            android:id="@+id/tvEditComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_semibold"
            android:paddingEnd="@dimen/_10sdp"
            android:text="Edit"
            android:textColor="#272727"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@+id/ivUserImage"
            app:layout_constraintTop_toBottomOf="@+id/ivUserImage" />

        <ImageView
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/typing_indicator_dot"
            app:tint="#272727" />

        <TextView
            android:id="@+id/tvDeleteComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_semibold"
            android:paddingStart="@dimen/_10sdp"
            android:text="Delete"
            android:textColor="#272727"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@+id/ivUserImage"
            app:layout_constraintTop_toBottomOf="@+id/ivUserImage" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>