<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.login_module.ChangePasswordActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/main_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/create_new_password"
                        android:textColor="@color/blackish"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/create_new_passwordtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_regular"
                        android:gravity="center"
                        android:text="@string/create_new_password2"
                        android:textColor="@color/blackish"
                        android:textSize="@dimen/_12sdp" />



                    <LinearLayout
                        android:id="@+id/old_pass_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center"
                            android:text="@string/old_password"
                            android:textColor="@color/blackish"
                            android:textSize="@dimen/_12sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/popup_relative">


                            <EditText
                                android:id="@+id/et_old_pass"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_toStartOf="@+id/view_old_pwd"
                                android:background="@color/transparent"
                                android:fontFamily="@font/muli_bold"
                                android:gravity="center|start"
                                android:hint="@string/enter_old_password"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/themecolor"
                                android:textSize="@dimen/_12sdp" />


                            <CheckBox
                                android:id="@+id/view_old_pwd"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/checkbox_selector"
                                android:button="@color/blackish"
                                android:padding="2dp"
                                android:scaleType="fitCenter"
                                android:textAppearance="?android:attr/textAppearanceLarge" />


                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center"
                            android:text="@string/new_password"
                            android:textColor="@color/blackish"
                            android:textSize="@dimen/_12sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/popup_relative">


                            <EditText
                                android:id="@+id/et_new_pass"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toStartOf="@+id/view_pwd1"
                                android:layout_toLeftOf="@+id/view_pwd1"
                                android:background="@color/transparent"
                                android:fontFamily="@font/muli_bold"
                                android:gravity="center|start"
                                android:hint="@string/enter_new_password"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/themecolor"
                                android:textSize="@dimen/_12sdp" />


                            <CheckBox
                                android:id="@+id/view_pwd1"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/checkbox_selector"
                                android:button="@color/blackish"
                                android:padding="2dp"
                                android:scaleType="fitCenter"
                                android:textAppearance="?android:attr/textAppearanceLarge" />


                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center"
                            android:text="@string/confirm_password"
                            android:textColor="@color/blackish"
                            android:textSize="@dimen/_12sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/popup_relative">


                            <EditText
                                android:id="@+id/et_confirm_password"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toStartOf="@+id/view_pwd2"
                                android:layout_toLeftOf="@+id/view_pwd2"
                                android:background="@color/transparent"
                                android:fontFamily="@font/muli_bold"
                                android:gravity="center|start"
                                android:hint="@string/enter_confirm_password"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/themecolor"
                                android:textSize="@dimen/_12sdp" />


                            <CheckBox
                                android:id="@+id/view_pwd2"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/checkbox_selector"
                                android:button="@color/blackish"
                                android:padding="2dp"
                                android:scaleType="fitCenter"
                                android:textAppearance="?android:attr/textAppearanceLarge" />


                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/proceed_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/orange_round_bg"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/proceed"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>