<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:weightSum="4"
        android:layout_marginRight="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/title_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/update_txt"
            android:layout_toLeftOf="@+id/update_txt">

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                 android:paddingRight="@dimen/_5sdp"
                android:layout_gravity="center"
                android:src="@drawable/uncheck" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/muli_bold"
                android:text="Title"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:layout_toStartOf="@+id/tv_cust_date"
                android:layout_toEndOf="@+id/iv_select"
                android:layout_toLeftOf="@+id/tv_cust_date"
                android:layout_toRightOf="@+id/iv_select" />

        </LinearLayout>

        <TextView
            android:id="@+id/update_txt"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/blue_btn"
            android:elevation="@dimen/_2sdp"
            android:fontFamily="@font/muli_semibold"
            android:gravity="center"
            android:text="@string/Update"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal"
            android:translationZ="@dimen/_2sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

</RelativeLayout>