<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F0F0F0"
    tools:context=".activity.docter.UpdateDoctorAppointmentActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/muli_extrabold"
                android:gravity="center"
                android:text="@string/update_appoi"
                android:textColor="@color/blackish"
                android:textSize="@dimen/_16sdp" />

            <RelativeLayout
                android:id="@+id/back_btn"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/back_arrow" />

            </RelativeLayout>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/doctor_name"
                        android:textColor="@color/blackish"
                        android:textSize="@dimen/_12sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/popup_relative">

                        <TextView
                            android:id="@+id/txt_doctor_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/transparent"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center|start"
                            android:hint="@string/enter_doctor_name"
                            android:imeOptions="actionNext"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/themecolor"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/doctor_address"
                        android:textColor="@color/blackish"
                        android:textSize="@dimen/_12sdp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/popup_relative">

                        <TextView
                            android:id="@+id/txt_doctor_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/transparent"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center|start"
                            android:hint="@string/address"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/themecolor"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/mobile_number"
                        android:textColor="@color/blackish"
                        android:textSize="@dimen/_12sdp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp">



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/popup_relative">

                                <TextView
                                    android:id="@+id/txt_mobile_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:background="@color/transparent"
                                    android:fontFamily="@font/muli_bold"
                                    android:gravity="center|start"
                                    android:hint="@string/enter_mobile_number"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:maxLength="10"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/themecolor"
                                    android:textSize="@dimen/_12sdp" />


                            </RelativeLayout>


                        </RelativeLayout>


                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/email"
                        android:textColor="@color/blackish"
                        android:textSize="@dimen/_12sdp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/popup_relative">

                        <TextView
                            android:id="@+id/txt_doctor_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/transparent"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center|start"
                            android:hint="@string/hint_email"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/themecolor"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/Fax"
                        android:textColor="@color/blackish"
                        android:textSize="@dimen/_12sdp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/popup_relative">

                        <TextView
                            android:id="@+id/txt_fax"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/transparent"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center|start"
                            android:hint="@string/enter_Fax"
                            android:imeOptions="actionNext"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/themecolor"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/Portal"
                        android:textColor="@color/blackish"
                        android:textSize="@dimen/_12sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/popup_relative">

                        <TextView
                            android:id="@+id/txt_Portal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/transparent"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center|start"
                            android:hint="@string/enter_Portal"
                           android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/themecolor"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/select_date"
                        android:textColor="@color/blackish"
                        android:textSize="@dimen/_12sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/popup_relative">

                        <RelativeLayout
                            android:id="@+id/rl_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/muli_bold"
                                android:gravity="center|start"
                                android:textColor="@color/themecolor"
                                android:textSize="@dimen/_12sdp"
                                android:layout_toStartOf="@+id/tv_date_img"
                                android:layout_toLeftOf="@+id/tv_date_img"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                />


                            <ImageView
                                android:id="@+id/tv_date_img"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/calender_grey_icon"
                                android:tint="@color/grayish"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp" />

                        </RelativeLayout>


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/select_time"
                        android:textColor="@color/blackish"
                        android:textSize="@dimen/_12sdp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/popup_relative">

                        <RelativeLayout
                            android:id="@+id/rl_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/muli_bold"
                                android:gravity="center|start"
                                android:textColor="@color/themecolor"
                                android:textSize="@dimen/_12sdp"
                                android:layout_toStartOf="@+id/tv_time_img"
                                android:layout_toLeftOf="@+id/tv_time_img"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                />


                            <ImageView
                                android:id="@+id/tv_time_img"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_access_time_black_24dp"
                                android:tint="@color/grayish"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp" />

                        </RelativeLayout>


                    </RelativeLayout>


                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center_vertical"
                            android:text="@string/set_reminder"
                            android:textColor="@color/blackish"
                            android:textSize="@dimen/_12sdp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_10sdp">

                            <Switch
                                android:id="@+id/tb_doc_appoint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>


                    </TableRow>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <TextView
                            android:id="@+id/tv_make_appoi"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/orange_round_bg"
                            android:elevation="2dp"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center"
                            android:text="@string/update_appoi"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:translationZ="2dp" />

                        <TextView
                            android:id="@+id/cancel_appointment_btn"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/orange_round_bg"
                            android:elevation="2dp"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center"
                            android:text="@string/cancel_appointment"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:translationZ="2dp"
                            android:layout_marginRight="@dimen/_5sdp" />

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</RelativeLayout>