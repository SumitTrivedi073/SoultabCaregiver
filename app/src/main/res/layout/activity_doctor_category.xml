<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".activity.docter.DoctorCategoryActivity">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_layout"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center"
        android:background="#F0F0F0">
        <TextView
            android:id="@+id/tv_no_data_doc_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/muli_black"
            android:textStyle="normal"
            android:visibility="gone" />

        <GridView
            android:id="@+id/gv_doc_cat"
            android:numColumns="2"
            android:gravity="center"
            android:verticalSpacing="@dimen/_4sdp"
            android:horizontalSpacing="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </GridView>
    </RelativeLayout >

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/lyBack_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:src="@drawable/close"
        app:backgroundTint="@color/orange_color"
app:tint="@android:color/white"
        app:elevation="@dimen/_5sdp"
        app:fabSize="normal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp" />

</RelativeLayout>