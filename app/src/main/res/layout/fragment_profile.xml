<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    tools:context=".companion.fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <RelativeLayout
                android:id="@+id/back_btn"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/back_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_centerInParent="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/companion_img"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"
                    android:src="@drawable/user_img" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/edit_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_10sdp" />

            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/muli_extrabold"
            android:gravity="center"
            android:text="Halona Smith"
            android:textColor="@color/tiber_color"
            android:textSize="@dimen/_18sdp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/firstname"
                        android:textColor="@color/tiber_color"
                        android:textSize="@dimen/_14sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/popup_relative">

                        <EditText
                            android:id="@+id/txt_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@color/transparent"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center|start"
                            android:hint="@string/hint_usr"
                            android:imeOptions="actionNext"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/themecolor"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/lastname"
                        android:textColor="@color/tiber_color"
                        android:textSize="@dimen/_14sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/popup_relative">

                        <EditText
                            android:id="@+id/txt_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@color/transparent"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center|start"
                            android:hint="@string/hint_usr2"
                            android:imeOptions="actionNext"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/themecolor"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/email"
                        android:textColor="@color/tiber_color"
                        android:textSize="@dimen/_14sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/popup_relative">

                        <TextView
                            android:id="@+id/email_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@color/transparent"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center|start"
                            android:hint="@string/enter_your_email_address"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/themecolor"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/phone_number"
                        android:textColor="@color/blackish"
                        android:textSize="@dimen/_12sdp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp">

                            <LinearLayout
                                android:id="@+id/CountryLL"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@drawable/popup_relative"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/countryCodetxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_10ssp"
                                    android:fontFamily="@font/muli_bold"
                                    android:gravity="center"
                                    android:text="+1"
                                    android:textColor="@color/themecolor"
                                    android:textColorHint="@color/themecolor"
                                    android:textSize="@dimen/_12sdp" />

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:src="@drawable/down_arrow" />

                            </LinearLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_toEndOf="@+id/CountryLL"
                                android:background="@drawable/popup_relative">

                                <EditText
                                    android:id="@+id/mobile_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:background="@color/transparent"
                                    android:fontFamily="@font/muli_bold"
                                    android:gravity="center|start"
                                    android:hint="@string/enter_phone_number"
                                    android:imeOptions="actionDone"
                                    android:inputType="phone"
                                    android:maxLength="10"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/themecolor"
                                    android:textSize="@dimen/_12sdp" />


                            </RelativeLayout>


                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/user_name"
                        android:textColor="@color/tiber_color"
                        android:textSize="@dimen/_14sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/popup_relative">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@color/transparent"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center|start"
                            android:hint="@string/enter_user_name"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/themecolor"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/changePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_semibold"
                        android:gravity="center"
                        android:text="@string/change_password"
                        android:textColor="@color/muzli_color"
                        android:textSize="@dimen/_14sdp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/_10sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:text="@string/Password"
                        android:textColor="@color/tiber_color"
                        android:textSize="@dimen/_14sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/popup_relative">

                        <TextView
                            android:id="@+id/password_ext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@color/transparent"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center|start"
                            android:hint="@string/passowrd_not_match"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/themecolor"
                            android:textSize="@dimen/_12sdp" />

                        <CheckBox
                            android:id="@+id/view_pwd1"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/checkbox_selector"
                            android:button="@color/blackish"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </RelativeLayout>



                </LinearLayout>


                <TextView
                    android:id="@+id/btn_SubmitProfile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/orange_round_bg"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:text="@string/save_changes"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</RelativeLayout>