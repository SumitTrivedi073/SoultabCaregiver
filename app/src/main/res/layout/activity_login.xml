<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.LoginActivity">


    <LinearLayout
        android:id="@+id/ly_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginBottom="20dp"
            android:focusableInTouchMode="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/main_logo" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="center">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_userid_mobileno">


                <RelativeLayout
                    android:id="@+id/rl_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/theme_border"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="@dimen/_10sdp">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cursorVisible="true"
                        android:fontFamily="@font/muli_regular"
                        android:gravity="center_vertical"
                        android:hint="@string/login_hint_email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textColor="@color/themecolor"
                        android:textColorHint="@color/themecolor"
                        android:textSize="@dimen/_13ssp"
                        tools:ignore="Autofill"
                        android:background="@color/transparent">

                    </EditText>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_user_pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/rl_userid_mobileno"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/theme_border"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/view_pwd1"
                    android:layout_toLeftOf="@+id/view_pwd1"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:hint="@string/hint_pass"
                    android:textColor="@color/themecolor"
                    android:textColorHint="@color/themecolor"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="Autofill"/>

                <CheckBox
                    android:id="@+id/view_pwd1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/checkbox_selector"
                    android:button="@null"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/rl_user_pass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/theme_btn_bg"
                android:fontFamily="@font/muli_black"
                android:gravity="center"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/tv_login">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Switch
                        android:id="@+id/tb_rem"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp" />

                    <TextView
                        android:id="@+id/tv_rem_pass"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_toEndOf="@+id/tb_rem"
                        android:fontFamily="@font/muli_regular"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="@string/remember_me"
                        android:textColor="@color/themecolor"
                        android:textSize="@dimen/_13ssp"
                        android:layout_toRightOf="@+id/tb_rem" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/themecolor" />

                <TextView
                    android:id="@+id/tv_forgot_pass"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="center"
                    android:text="@string/forgot_pass"
                    android:textColor="@color/themecolor"
                    android:textSize="@dimen/_13ssp" />
            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>