<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">#ffffff</item>
    </style>


    <style name="CustomAlertDialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/orange_color</item>
        <item name="colorAccent">@color/orange_color</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themecolor</item>
        <item name="colorPrimaryDark">@color/themecolor</item>
        <item name="colorAccent">@color/themecolor</item>
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">
            @style/DialogButtonStyled
        </item>
        <item name="android:buttonBarNegativeButtonStyle" tools:targetApi="lollipop">
            @style/DialogButtonStyled
        </item>
        <item name="android:buttonBarNeutralButtonStyle" tools:targetApi="lollipop">
            @style/DialogButtonStyled
        </item>


    </style>

    <style name="DialogButtonStyled" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/themecolor</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="RadioButtonStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/gray_color</item>
        <item name="colorAccent">@color/themecolor</item>
        <item name="android:textColorSecondary">@color/black</item>

    </style>


    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/muli_bold</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="tab_txt_style" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

    <style name="talk_tab_style" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blackish</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/blackish
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/blackish
        </item>
    </style>

    <style name="CallTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/callBackground</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
