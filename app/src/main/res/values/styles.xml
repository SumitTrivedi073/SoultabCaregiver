<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">@color/themecolor</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowDisablePreview">true</item>


    </style>

    <style name="CustomAlertDialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/orange_color</item>
        <item name="colorAccent">@color/orange_color</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themecolor</item>
        <item name="colorPrimaryDark">@color/themecolor</item>
        <item name="colorAccent">@color/themecolor</item>
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNegativeButtonStyle" tools:targetApi="lollipop">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNeutralButtonStyle" tools:targetApi="lollipop">@style/DialogButtonStyled</item>


    </style>

    <style name="DialogButtonStyled" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/themecolor</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="RadioButtonStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/gray_color</item>
        <item name="colorAccent">@color/themecolor</item>
        <item name="android:textColorSecondary">@color/black</item>

    </style>


    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/muli_bold</item>

    </style>

    <style name="TextStyleBNV">
        <item name="android:textSize">@dimen/_5sdp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
